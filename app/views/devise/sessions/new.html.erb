<div class="login">

	
	<div class="row">
		<div class="small-12 columns signup-form">
	
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="row">
		 	<div class="small-1 small-offset-3 columns">
		 		<%= f.label :email, class: "right" %>
		 	</div>
		 	<div class="small-5 columns fill">
		 		<%= f.email_field :email, autofocus: true %>
		 	</div>
		 	<div class="small-3 columns">
				&nbsp;
			</div>	
		</div>
		
		<div class="row">
		 	<div class="small-1 small-offset-3 columns">
		 		<%= f.label :password, class: "right" %>
		 	</div>
		 	<div class="small-5 columns"> 		
				<%= f.password_field :password, autocomplete: "off" %>
			</div>
		 	<div class="small-3 columns">
				&nbsp;
			</div>		
		</div>
		
		<div class="row">
			<% if devise_mapping.rememberable? -%>
				<div class="small-4 small-offset-4 columns">
					<%= f.check_box :remember_me %> <%= f.label :remember_me, class: "small" %>
				</div>
			<% end -%>
		</div>
		
		<div class"row">
			<div class="small-4 small-offset-4 columns">
		 		<%= f.submit "Sign in", class: "left" %>
		 	</div>
		 </div>	
		<% end %>	
	
		</div>
	</div>

	<div class="row more-links">
		<div class="small-6 small-offset-3 columns">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
