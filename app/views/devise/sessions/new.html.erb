<div class="login">
	<div class="row">
		<div class="small-11  medium-10 medium-offset-2 columns">
	    <% if flash[:alert] %>
	      <div data-alert class="alert-box alert radius">
	        <%= flash[:alert] %>
	        <a href="#" class="close">&times;</a>
	      </div>
	    <% end %>
		</div>
	</div>	
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	
	<div class="row ">
		<div class="small-11  medium-7 medium-offset-2 columns">
			<div class="row">
				<div class="small-12 medium-2 columns">
					<%= f.label :email, class: "right form-label" %>
				</div>
				<div class="small-12 medium-10 columns">
					<%= f.email_field :email, autofocus: true %>
				</div>			
			</div>
			<div class="row">
				<div class="small-12 medium-2 columns">
					<%= f.label :password, class: "right form-label" %>
				</div>
				<div class="small-12 medium-10 columns">
					<%= f.password_field :password, autocomplete: "off" %>
				</div>			
			</div>	
			<div class="row">
				<div class="small-12 columns">
			        <% if devise_mapping.rememberable? -%>
			          <div class="small-12 small-offset-2 columns">
			            <%= f.check_box :remember_me %> <%= f.label :remember_me, class: "small" %>
			          </div>
			        <% end -%>
				</div>			
			</div>
			<div class="row">
				<div class="small-12 medium-5 small-offset-2 columns">
					<%= f.submit "Sign in", class: "left button green-button" %>
				</div>			
			</div>							
		</div>
		<div class="small-11 medium-3 columns">
			<%= render "devise/shared/links" %>
		</div>
	</div>	
	
	<% end %>
</div>
