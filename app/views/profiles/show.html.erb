<div class="bio-message">
  <div class="row">
    <div class="small-12  columns">
      <div class="row">
        <div class="small-12 medium-2 columns">
          <%= image_tag "mystery-man.jpg", :class => "profile-pic" %>
        </div>
        <div class="small-12 medium-10 columns">
          <p class="profile-name"><%= profile.name %></p>
          <p><i><%= profile.career %></i></p>
          <p class="profile-location"><%=profile.location %></p>
          <p class="profile-bio"><%=profile.bio %></p>
          <%= link_to "Edit Profile", edit_current_profile_path, class: "button green-button" if viewing_own_profile %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-4 columns">
    <%= render "profile_details" %>

    <%= link_to new_video_path, class: "button bio-button green-button" do %>
      <span class="submit-text">submit a video</span><br>
      <span class="button-text">What are you doing with Y2Q?</span>
    <% end if viewing_own_profile %>
  </div>
  <div id="videos-area" class="small-12 medium-8 columns videos">
    <%= render "videos/filtered_videos", i_filter: [], hb_filter: [], section_title: "My Videos" %>

  </div>
</div>
