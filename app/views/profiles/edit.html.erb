<div class="row">
  <div class="small-12 columns">

    <h1>Edit your profile</h1>

    <%= form_for(@profile) do |f| %>
      <% if @profile.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@foo_model.errors.count, "error") %> prohibited this foo_model from being saved:</h2>

          <ul>
          <% @foo_model.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :location %><br>
        <%= f.text_field :location %>
      </div>
      <div class="field">
        <%= f.label :bio %><br>
        <%= f.text_field :bio %>
      </div>
      <div class="field">
        <%= f.label :career %><br>
        <%= f.text_field :career %>
      </div>
      <div class="field">
        <%= f.label :MBTI, "MBTI" %><br>
        <%= f.text_field :MBTI %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
</div>
