
<%= render "instructions" %>

<%= form_for video do |f| %>
  <%= f.hidden_field :user_id, { :value => video.user_id } %>
  <div class="row">
    <div class="small-11  medium-10 medium-offset-2 columns">
      <div class="row">
        <div class="small-12 medium-4 columns">
          <%= f.label :heartbreak_id, "What breaks your heart?", :class=>"form-label" %>
        </div>
        <div class="small-12 medium-5 columns left">
          <%= f.collection_select(:heartbreak_id, heartbreaks, :id, :display_text) %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 medium-4 columns">
          <%= f.label :inspiration_id, "What makes you come alive?", :class=>"form-label" %>
        </div>
        <div class="small-12 medium-5 columns left">
          <%= f.collection_select(:inspiration_id, inspirations, :id, :display_text) %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 medium-4 columns">
          <%= f.label :embed_url, "Url of your video:", :class=>"form-label" %>
        </div>
        <div class="small-12 medium-5 columns left">
          <%= f.url_field :embed_url, placeholder: "Please enter your video's YouTube url." %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 medium-4 columns">
          <%= f.label :title, "Video Title:", :class=>"form-label" %>
        </div>
        <div class="small-12 medium-5 columns left">
          <%= f.text_field :title %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-7 small-centered  medium-9 medium-offset-2 columns center">
      <%= f.submit "Submit", class:'button green-button' %>
    </div>
  </div>
  <div class="row">
    <div class="small-10  medium-8 medium-offset-2 columns">
      <p>Y2Q staff must approve all uploaded videos and will review each submission for content and quality before making the video available on the site.</p>
    </div>
  </div>
<% end %>
