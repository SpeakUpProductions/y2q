<div class="row">
  <h2>Upload a video</h2>

  <%= form_for @video do |f| %>
    <%= f.label :embed_url, "Url of your video:" %>
    <%= f.url_field :embed_url %><br />

    <%= f.label :title, "Video Title:" %>
    <%= f.text_field :title %><br />
    
    <%= f.label :heartbreak, "Related Heartbreak:" %>
	<select id="video_heartbreak" class="question-select">
	<% @heartbreaks.each do |hb| %>
		<option value="<%=hb.id%>"><%= hb.display %></option>
	<% end %>
	</select>
    
    <%= f.label :inspiration, "Related Inspiration:" %>
	<select id="video_inspiration" class="question-select">
	<% @inspirations.each do |i| %>
		<option value="<%=i.id%>"><%= i.display %></option>
	<% end %>
	</select>

    <%= f.submit "Submit" %>
  <% end %>
</div>
